<entry>
    <title>${post.title}</title>
    <id>tag:${config.site.url},${config.feedFormatter.format(post.dateCreated)}:/${post.name}/</id>
    <published>${config.feedFormatter.format(post.dateCreated)}</published>
    <updated>${config.feedFormatter.format(post.lastUpdated)}</updated>
    <link href="${config.createPostLink(post)}"/>
    <summary>${post.summary}</summary>
    <content type="html">
	    ${post.content}
    </content>
</entry>